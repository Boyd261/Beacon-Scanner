<resources>

    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme.TextAppearance" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="AppTheme.TextAppearance.Title" parent="AppTheme.TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="AppTheme.ToolBar.TextAppearance" parent="AppTheme.TextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/colorDivider</item>
    </style>

</resources>
