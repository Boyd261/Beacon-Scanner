<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingEnd="16dp"
    android:paddingStart="16dp">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginTop="@dimen/status_bar_height"
        app:titleTextAppearance="@style/AppTheme.ToolBar.TextAppearance" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="16"
        android:textAlignment="center"
        android:textSize="120sp" />

    <TextView
        android:id="@+id/detail_uuid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/text_view_padding_bottom"
        android:text="@string/detail_uuid"
        android:textSize="@dimen/small_text_size" />

    <TextView
        android:id="@+id/detail_field_uuid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/text_view_padding_bottom"
        android:textAllCaps="true"
        android:textSize="@dimen/extra_small_text_size" />

    <TextView
        android:id="@+id/detail_bluetooth_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/text_view_padding_bottom"
        android:text="@string/detail_bluetooth_address"
        android:textSize="@dimen/small_text_size" />

    <TextView
        android:id="@+id/detail_field_bluetooth_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/text_view_padding_bottom"
        android:textSize="@dimen/small_text_size" />

    <TextView
        android:id="@+id/detail_minor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/text_view_padding_bottom"
        android:text="@string/detail_minor"
        android:textSize="@dimen/small_text_size" />

    <TextView
        android:id="@+id/detail_field_minor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/text_view_padding_bottom"
        android:textSize="@dimen/small_text_size" />

    <TextView
        android:id="@+id/detail_major"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/text_view_padding_bottom"
        android:text="@string/detail_major"
        android:textSize="@dimen/small_text_size" />

    <TextView
        android:id="@+id/detail_field_major"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/text_view_padding_bottom"
        android:textSize="@dimen/small_text_size" />

    <TextView
        android:id="@+id/detail_rssi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/text_view_padding_bottom"
        android:text="@string/detail_rssi"
        android:textSize="@dimen/small_text_size" />

    <TextView
        android:id="@+id/detail_field_rssi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/text_view_padding_bottom"
        android:textSize="@dimen/small_text_size" />

    <TextView
        android:id="@+id/detail_tx_power"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/text_view_padding_bottom"
        android:text="@string/detail_tx_power"
        android:textSize="@dimen/small_text_size" />

    <TextView
        android:id="@+id/detail_field_tx_power"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/small_text_size" />
</LinearLayout>